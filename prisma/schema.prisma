generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


model Temperatura {
  id        Int      @id @default(autoincrement())
  chipId    String   @map("chipid") 
  value     Float
  timestamp DateTime @default(now())
}

model User {
  id                Int      @id @default(autoincrement())
  name              String
  email             String   @unique
  password          String
  resetToken        String?
  resetTokenExpires DateTime?
  is2FAEnabled      Boolean   @default(false)
  twoFASecret       String?
  backupCode        String?
  expoPushToken     String?
  alerts            Alerts[]
  experimentos Experimento[]
}

model Device {
  id          Int    @id @default(autoincrement())
  mac_address String @unique
  experimentos Experimento[]
}

model Alerts {
  id                Int      @id @default(autoincrement())
  user_id           Int
  temperatura_min   Float?
  temperatura_max   Float?
  hora_inicio       DateTime?
  hora_fim          DateTime?
  criado_em         DateTime  @default(now())
  ativo             Boolean   @default(true)
  notificacaoAtiva  Boolean   @default(false)
  nome              String?
  nota              String?

  user              User      @relation(fields: [user_id], references: [id])
}

model Relatorios {
  id        Int      @id @default(autoincrement())
  chip_id   String
  data      DateTime
  relatorio String
  resumo    String

  criado_em DateTime @default(now())
}

model Experimento {
  id             Int       @id @default(autoincrement())
  nome           String
  objetivo       String?   @db.Text
  temp_min_ideal Float
  temp_max_ideal Float
  data_inicio    DateTime  @default(now())
  data_fim       DateTime
  ativo          Boolean   @default(true)
  responsavel    User      @relation(fields: [userId], references: [id])
  userId         Int
  dispositivo    Device    @relation(fields: [deviceId], references: [id])
  deviceId       Int
}
